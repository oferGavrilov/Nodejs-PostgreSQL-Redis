// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id              String        @id @default(uuid()) // @id means that this field is the primary key, and @default(uuid()) means that the field gets a Unique value generated by the database by default
  name            String        @db.VarChar(255)
  email           String
  img             String?       @default("default.png")
  verified        Boolean       @default(false)
  password        String
  role            RoleEnumType? @default(user)

  verficationCode String?       @db.Text
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([email, verficationCode])
  @@index([email, verficationCode])
  @@map(name: "users")
}

enum RoleEnumType {
  user
  admin
}
